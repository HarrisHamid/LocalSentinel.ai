{
  "name": "localsentinal-ai",
  "displayName": "LocalSentinal.ai",
  "description": "LocalSentinal AI Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:localsentinalView"
  ],
  "main": "./extension.js",
  "contributes": {
    "views": {
      "localsentinal": [
        {
          "id": "localsentinalView",
          "name": "LocalSentinal.ai",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "localsentinal",
          "title": "LocalSentinal.ai",
          "icon": "$(shield)"
        }
      ]
    },
    "commands": [
      {
        "command": "localsentinal-ai.startServer",
        "title": "Start Server",
        "icon": "$(run)"
      },
      {
        "command": "localsentinal-ai.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "localsentinal-ai.refreshEntry",
        "title": "Refresh Entry",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "localsentinal-ai.startServer",
          "when": "view == localsentinalView",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  }
}
